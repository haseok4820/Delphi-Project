unit Frame_CheckBox;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes,
  Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls,
  dxGDIPlusClasses, Vcl.ExtCtrls;

type
  TFrame_ENV_CheckBox = class(TFrame)
    Image_Check: TImage;
    Label_MSG: TLabel;
    Label2: TLabel;
    procedure Image_CheckClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

implementation

{$R *.dfm}

uses uDM;

procedure TFrame_ENV_CheckBox.Image_CheckClick(Sender: TObject);
var
  iTag: integer;
begin
  if Assigned(Self.OnClick) then
  begin
    iTag := (Sender as TImage).Tag;
    DM.Image_CheckBOX(iTag, Self);

    Self.OnClick(Self);
  end
  else
  begin
    ShowMessage('해당 옵션에 대한 이벤트 정보가 없습니다. 개발실로 안내해주세요.');
  end;

end;

end.
