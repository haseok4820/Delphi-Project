unit fmCategory;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Frame_Edit, Vcl.StdCtrls, dxGDIPlusClasses, Vcl.ExtCtrls,
  System.RegularExpressions;

type
  TForm_Category = class(TForm)
    Panel_Header: TPanel;
    Image_Cancel: TImage;
    FrameEdit_CODE: TFrame_ENV_Edit;
    FrameEdit_NAME: TFrame_ENV_Edit;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
    procedure Image_CancelClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure Panel_HeaderMouseDown(Sender: TObject; Button: TMouseButton; Shift: TShiftState; X, Y: Integer);
    procedure FrameEdit_NAMEEdit_ValueKeyPress(Sender: TObject; var Key: Char);
    procedure FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form_Category: TForm_Category;
  sCODE, sName: String;

implementation

{$R *.dfm}

procedure TForm_Category.Button1Click(Sender: TObject);
var
  KOR_Regex: String = '.*[¤¡-¤¾¤¿-¤Ó°¡-ÆR]+.*';
begin
  sCODE := FrameEdit_CODE.Edit_Value.Text;
  sName := FrameEdit_NAME.Edit_Value.Text;

  if TRegEx.IsMatch(sCODE, KOR_Regex) then
  begin
    ShowMessage('ºÐ·ùÄÚµå´Â ¿µ¹®ÀÚ, ¼ýÀÚ¸¸ ÀÔ·Â °¡´ÉÇÕ´Ï´Ù.');
    Exit;
  end;

    if (sCODE <> '') AND (sName <> '') then
      ModalResult := mrOk
    else
    begin
      ModalResult := mrNo;
    end;
end;

procedure TForm_Category.FormCreate(Sender: TObject);
begin
  sCODE := '';
  sName := '';
end;

procedure TForm_Category.FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
begin
  if Key = 27 then
    Image_CancelClick(Image_Cancel);
end;

procedure TForm_Category.FormShow(Sender: TObject);
begin
  SetWindowPos(Self.Handle, HWND_TOPMOST, Left, Top, Width, Height, 0);
end;

procedure TForm_Category.FrameEdit_NAMEEdit_ValueKeyPress(Sender: TObject; var Key: Char);
begin
  if Key = #13 then
    Button1Click(Button1);
end;

procedure TForm_Category.Image_CancelClick(Sender: TObject);
begin
  ModalResult := mrCancel;
end;

procedure TForm_Category.Panel_HeaderMouseDown(Sender: TObject; Button: TMouseButton; Shift: TShiftState; X, Y: Integer);
begin

  ReleaseCapture;
  SendMessage(Handle, WM_NCLBUTTONDOWN, HTCAPTION, 0);
end;

end.
