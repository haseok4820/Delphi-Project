unit MiniEgg;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics, Dateutils,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm_MiniEgg = class(TForm)
    Memo_View: TMemo;
    Timer_MiniGame: TTimer;
    procedure FormShow(Sender: TObject);
    procedure Timer_MiniGameTimer(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form_MiniEgg: TForm_MiniEgg;
  sDate : String;
  EggStr: String;

implementation

{$R *.dfm}

procedure TForm_MiniEgg.FormShow(Sender: TObject);
begin
  //
  ShowMEssage(StrToDate(StartDate));

end;

procedure TForm_MiniEgg.Timer_MiniGameTimer(Sender: TObject);
const
  nilChar = '            ';
var
  iTag, i, j: Byte;
begin
  iTag := (Sender as TTimer).Tag;
  with Memo_View do
  begin
    Clear;
    if Tag = 0 then
      Lines.Add(#13);

    Lines.Add(nilChar + '            ■■');
    Lines.Add(nilChar + ' ■        ■■■');
    Lines.Add(nilChar + '  ■■■■■');
    case Tag of
      0:
        begin
          Lines.Add(nilChar + '■         ■ ');
          Tag := 1;
        end;
    else
      begin
        Lines.Add(nilChar + '  ■     ■');
        Tag := 0;
      end;
    end;

    if Tag = 0 then
      Lines.Add(#13);

    Lines.Add('======================================' + IntToStr(Tag));
    Lines.Add('페이지를 찾을 수 없습니다. 다시 시도해주세요.');
  end;

  (Sender as TTimer).Tag := iTag;

end;

end.
