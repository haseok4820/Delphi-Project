unit uBG;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls;

type
  TForm_BG = class(TForm)
    Timer_CloseCheck: TTimer;
    procedure FormCreate(Sender: TObject);
    procedure Timer_CloseCheckTimer(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form_BG: TForm_BG;

implementation

{$R *.dfm}

uses uMain;

procedure TForm_BG.FormCreate(Sender: TObject);
begin
  Top := Screen.Monitors[0].Top;
  Left := Screen.Monitors[0].Left;
  Width := Screen.Monitors[0].Width;
  Height := Screen.Monitors[0].Height;

  Timer_CloseCheck.Enabled := True;
end;

procedure TForm_BG.Timer_CloseCheckTimer(Sender: TObject);
begin
  if FindWindow(PWidechar(Hint), nil) = 0 then
  begin
    Close;
  end;
end;

end.
