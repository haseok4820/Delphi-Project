unit Frame_PeopleList;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes,
  Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls, ImagingComponents;

type
  TFrame_People = class(TFrame)
    Label_Seq: TLabel;
    Edit_Name: TEdit;
    Memo_Notice: TMemo;
    Edit_Max: TEdit;
    Label_Check: TLabel;
    procedure Label_CheckClick(Sender: TObject);
    procedure Memo_NoticeChange(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

implementation

{$R *.dfm}

uses uDM;

procedure TFrame_People.Label_CheckClick(Sender: TObject);
var
  iTag: Integer;
begin
  if Sender <> Nil then
  begin
    iTag := (Sender as TLabel).Tag;
    if iTag = Low(arrYN) then
      iTag := High(arrYN)
    else
      iTag := Low(arrYN);
  end
  else
    iTag := Low(arrYN);
  Label_Check.Caption := arrYN[iTag];
  Label_Check.Tag := iTag;

  // «ÿ¡¶
  if iTag = Low(arrYN) then
  begin
    Edit_Name.Enabled := False;
    Memo_Notice.Enabled := False;
    Edit_Max.Enabled := False;

  end
  // º±≈√µ 
  else
  begin

  end;

end;

procedure TFrame_People.Memo_NoticeChange(Sender: TObject);
begin
  Memo_Notice.Hint := Memo_Notice.Text;
end;

end.
