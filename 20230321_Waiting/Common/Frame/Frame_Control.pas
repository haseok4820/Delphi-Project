    GroupBox_Group: TGroupBox;
    Panel_Option: TPanel;
    Button_Option1: TButton;
    Button_Option2: TButton;
    Button_Option3: TButton;
    Panel_Status: TPanel;
    Button_ALLCancel: TButton;
    Button_LoadOptions: TButton;
    Label_Status: TLabel;
